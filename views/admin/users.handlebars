<h1>餐廳後台</h1>
<div class="my-4">
  <a href="/admin/Restaurants">Restaurants</a> | 
  <a href="/admin/users">Users</a> | 
  <a href="/admin/categories">Categories</a>
</div>

<br/>
<br/>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
        <td>
            <a>admin</a>
        </td>
        <td>
            <form action="/admin/users/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class="btn btn-link">set as user</button>
            </form>
        </td>
      {{else}}
        <td>
            <a>user</a>
        </td>
        <td>
            <form action="/admin/users/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class="btn btn-link">set as admin</button>
            </form>
        </td>
       {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>